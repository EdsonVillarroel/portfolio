{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "prefer-const": "error",
    "no-unused-vars": "warn",
    "no-unused-expressions": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-undef": "off"
    },
  "settings": {
    "react": {
      "ecmaVersion": "detect",
      "version": "detect"
    }
  }
}